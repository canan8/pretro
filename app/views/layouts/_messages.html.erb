<% flash.each do |message_type, message_content| %>
<% if notice %>
  <div class="ui container">
    <div class="ui success message">
      <i class="close icon"></i>
      <div class="header">
        <%= notice %>
      </div>
    </div>
  </div>
  <br/>
  <% elsif alert %>
  <div class="ui container">
    <div class="ui error message">
      <i class="close icon"></i>
      <%= alert %>
    </div>
  </div>
  <br/>
  <% else %>
    <div class="ui <%= message_type %> message transition">
      <i class="close icon"></i>
      <div class="header">
        <%= message_content %>
      </div>
    </div>
  <% end %>
<% end %>